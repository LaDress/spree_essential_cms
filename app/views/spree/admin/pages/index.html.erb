<% content_for :page_title do %>
  <%= t('.listing_pages') %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_page_link">
    <%= button_link_to t('.new_page'), new_object_url, :icon => 'add' %>
  </li>
<% end %>

<table class="index sortable" data-sortable-link="<%= update_positions_admin_pages_url -%>">
  <thead>
  <tr>
      <th colspan="2"><%= sort_link @search, :title, t("page.title") %></th>
      <th><%= sort_link @search, :path, t("page.path") %></th>
      <th><%= sort_link @search, :accessible, t("page.accessible") %></th>
      <th><%= sort_link @search, :visible, t("page.visible") %></th>
      <th class="actions"><%= t("action") %></th>
  </tr>
  </thead>
  <tbody>
    <%- @collection.each do |page|%>
    <tr id="<%= spree_dom_id page %>">
      <td class="no-border">
        <span class="handle"></span>
      </td>
      <td><%=link_to page.title, object_url(page) %></td>
      <td><%= page.path %></td>
      <td><%= page.accessible %></td>
      <td><%= page.visible %></td>
      <td class="actions">
        <%= link_to_with_icon :accept, t('preview'), page.path, onclick: 'window.open(this.href);return false;' %> &nbsp;
        <%= link_to_with_icon :pages, t('page.contents'), admin_page_contents_path(page) %> &nbsp;
        <%= link_to_edit page, no_text: true %> &nbsp;
        <%= link_to_delete page, no_text: true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_pages_index_search">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="field-block alpha four columns">
        <div class="field">
          <%= f.label :title_cont, t('page.title') %><br />
          <%= f.text_field :title_cont, :size => 25 %>
        </div>
      </div>
      <div class="field-block omega four columns">
        <div class="field">
          <%= f.label :path_cont, t('page.path') %><br />
          <%= f.text_field :path_cont, :size => 25 %>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="actions filter-actions">
        <div data-hook="admin_pages_index_search_buttons">
          <%= button Spree.t(:filter_results), 'icon-search' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
