<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => "Images"} %>

<% if @page_image.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @page_image %>
<% end %>

<%= simple_form_for([:admin, @page.id, @page_image], :url => admin_page_image_url(@page, @page_image), :html => { :multipart => true }) do |f| %>
  <fieldset class="no-border-top">
    <div class="field">
      <%= label_tag ("thumbnail") %><br/>
      <%= link_to(image_tag(@page_image.attachment.url(:mini)), @page_image.attachment.url(:product)) %>
    </div>
    <%= render "form", :form => f %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
